{
     "name": "next-action-plus",
     "version": "1.0.1",
     "description": "Plug-and-play, type-safe server actions with schema validation (schema-agnostic, Zod compatible).",
     "license": "MIT",
     "repository": {
          "type": "git",
          "url": "git+https://github.com/muhgholy/next-action-plus.git"
     },
     "homepage": "https://github.com/muhgholy/next-action-plus#readme",
     "bugs": {
          "url": "https://github.com/muhgholy/next-action-plus/issues"
     },
     "keywords": [
          "next.js",
          "nextjs",
          "server actions",
          "server action",
          "type-safe",
          "typescript",
          "validation",
          "zod",
          "formdata",
          "standard schema"
     ],
     "type": "module",
     "main": "./dist/index.js",
     "types": "./dist/index.d.ts",
     "exports": {
          ".": {
               "types": "./dist/index.d.ts",
               "import": "./dist/index.js",
               "default": "./dist/index.js"
          }
     },
     "engines": {
          "node": ">=20"
     },
     "files": [
          "dist"
     ],
     "publishConfig": {
          "access": "public",
          "provenance": true
     },
     "scripts": {
          "clean": "rm -rf dist",
          "build": "tsup",
          "typecheck": "tsc -p tsconfig.build.json --noEmit",
          "test": "vitest run --typecheck",
          "test:watch": "vitest --typecheck",
          "release": "semantic-release"
     },
     "peerDependencies": {
          "zod": "^3.22.0"
     },
     "devDependencies": {
          "@semantic-release/changelog": "^6.0.3",
          "@semantic-release/commit-analyzer": "^12.0.0",
          "@semantic-release/exec": "^6.0.3",
          "@semantic-release/git": "^10.0.1",
          "@semantic-release/github": "^11.0.0",
          "@semantic-release/release-notes-generator": "^13.0.0",
          "@types/node": "^22.10.2",
          "semantic-release": "^24.0.0",
          "tsup": "^8.5.0",
          "typescript": "^5.6.3",
          "vitest": "^4.0.7",
          "zod-form-data": "^3.0.1",
          "zod": "^3.22.0"
     }
}
